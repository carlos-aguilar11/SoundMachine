<div class='container'>
    {{#each soundFiles}}
      <button
        type='button'
        class='grid-button'
        data-sound={{this}}
      ></button>
    {{/each}}
</div>

<script>

  function playSound(soundFile) { const audio = new Audio(soundFile);
  audio.play(); } const buttons =
  document.getElementsByClassName("grid-button");
  Array.from(buttons).forEach((button) => { button.addEventListener("click",
  function() { const soundFile = this.getAttribute("data-sound");
  playSound(soundFile); }); }); 

</script>  